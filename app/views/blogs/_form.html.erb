<%= form_with(model: blog, local: true) do |form| %>
  <% if blog.errors.any? %>
      <div class="alert alert-danger" role="alert">
        <%= pluralize(blog.errors.count, "") %> 件のエラー:
        <ul>
        <% blog.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
     </div>
  <% end %>

<div class="blog_post">
  <ul>
    <li >
      <%= form.text_field :title, class:'blog_post title',
        placeholder:'タイトルを入力'
      %>
    </li>
    <li >
      <%= form.text_area :content, class:'blog_post content',
        placeholder:'今日は何を勉強しましたか？'
      %>
    </li>
    <li>
      <%= form.text_area :content2, class:'blog_post content2',
        placeholder:'本日のまとめをお願いします！'
      %>
    </li>
    <li>
      <%= form.file_field :image, id: :image%>
      <%= form.hidden_field :image_cache %>
      <div class="preview"/>
    </li>
      <%= form.submit :class=>"btn", :value=>"投稿する" %>
  </ul>
 <div>
<% end %>
